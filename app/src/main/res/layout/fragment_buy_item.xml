<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/large_spacing"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/large_spacing"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            style="@style/DialogHeaderTitleStyle"
            android:id="@+id/buyFragmentDialogTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Название тренинга:"/>

        <ImageView
            android:id="@+id/dialogFragmentCloseImageViewId"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dialog_close_button_size"
            android:layout_height="@dimen/dialog_close_button_size"
            android:layout_margin="@dimen/large_spacing"
            android:src="@drawable/ic_close"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/large_spacing"
        android:paddingRight="@dimen/large_spacing"
        android:paddingBottom="@dimen/large_spacing"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стоимость:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="900 руб"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/large_spacing"
        android:paddingRight="@dimen/large_spacing"
        android:paddingBottom="@dimen/large_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срок годности(после оплаты):"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="67 дней"/>

    </LinearLayout>

    <EditText
        android:layout_marginLeft="@dimen/large_spacing"
        android:layout_marginRight="@dimen/large_spacing"
        android:layout_marginBottom="@dimen/large_spacing"
        android:padding="@dimen/medium_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorGrey"
        android:hint="Промокод(если есть)"/>

    <LinearLayout
        android:paddingLeft="@dimen/large_spacing"
        android:paddingRight="@dimen/large_spacing"
        android:paddingBottom="@dimen/large_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стомость с учетом скидки:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="867 руб"/>

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dialog_button_spacing"
        android:layout_marginLeft="@dimen/dialog_button_spacing"
        android:textColor="@color/colorWhite"
        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/GreenButtonOverlay"
        android:text="Перейти к оплате"/>
</LinearLayout>
